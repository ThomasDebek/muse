<div id="post_show">
  <p> <%= image_tag @post.image.url(:medium) %></p>
  <h1> <%= @post.title %> </h1>
  <p> <%= @post.link %></p>
  <p> <%= @post.description%></p>
  <p class="user.name">
    Shared by
    <%= @post.user.name  %>
    about
    <%= time_ago_in_words(@post.created_at) %>
  </p>
    <div class="post_data">
      <p>  <%= pluralize(@post.get_upvotes.size, "Like") %> </p>
      <p>  <%= pluralize(@post.get_downvotes.size, "Dislike") %> </p>
      <p> <%= link_to "like", like_post_path(@post), method: :get  %></p>
      <p> <%= link_to "dislike", dislike_post_path(@post), method: :get  %></p>
    </div>

</div>



<div id="comments">
  <h2 class="comment_count">
    <%= pluralize(@post.comments.count, "Comment") %>
  </h2>
  <% @post.comments.each do |comment| %>
    <div class="comment">
      <p class="username">
        <%= comment.user.name %>
      </p>
      <p class="content">
        <%= comment.content %>
      </p>
      <p>
        <% if current_user && current_user == comment.user %>
          <%= link_to "Edit",  edit_post_comment_path(@post, comment), class: "data" %>
          <%= link_to "Delete", post_comment_path(@post, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "data" %>
        <% end %>
      </p>
    </div>
  <% end %>
  <legend><h1></h1></legend>

   <% if current_user %>
    <%= render "comments/form" %>
  <% else %>
    <p> If you want to add comment you must <%= link_to 'Sign in', new_user_session_path %> </p>
  <% end %>

</div>


